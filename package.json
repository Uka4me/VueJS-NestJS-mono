{
  "name": "root",
  "version": "1.0.0",
  "author": "Ury <uka793@mail.ru>",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "apps/*",
    "common/*"
  ],
  "scripts": {
    "prepare": "npx husky install",
    "frontend": "npm run --workspace=@root/frontend",
    "backend": "npm run --workspace=@root/backend",
    "format": "npm run lint --fix && npx prettier --write **/*.{html,scss,json}",
    "lint": "npx eslint . --ext .js,.jsx,.ts,.tsx,.vue"
  },
  "devDependencies": {
    "@types/jest": "29.2.4",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "29.3.1",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.5",
    "rimraf": "^4.4.0",
    "ts-jest": "29.0.3",
    "typescript": "^4.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,vue}": "npx eslint . --fix",
    "*": "npx prettier -w -u"
  }
}
